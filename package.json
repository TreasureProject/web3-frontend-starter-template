{
  "name": "web3-frontend-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "remix build && run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public -b $(cat .env)",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "codegen": "node -r dotenv/config node_modules/.bin/gql-gen",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "lint": "prettier --write 'app/**/{*.ts,*.tsx}' && eslint --fix --no-error-on-unmatched-pattern 'app/**/{*.ts,*.tsx}'",
    "postinstall": "patch-package",
    "prepare": "husky install"
  },
  "dependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@headlessui/react": "^1.6.4",
    "@rainbow-me/rainbowkit": "^0.2.1",
    "@remix-run/cloudflare": "^1.5.1",
    "@remix-run/cloudflare-pages": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "buffer": "^6.0.3",
    "clsx": "^1.1.1",
    "cross-env": "^7.0.3",
    "date-fns": "^2.28.0",
    "ethers": "^5.6.8",
    "graphql": "^16.5.0",
    "graphql-request": "^4.2.0",
    "graphql-tag": "^2.12.6",
    "nprogress": "^0.2.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-hot-toast": "^2.2.0",
    "tiny-invariant": "^1.2.0",
    "wagmi": "^0.4.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.11.0",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.4.11",
    "@graphql-codegen/typescript-graphql-request": "^4.4.8",
    "@graphql-codegen/typescript-operations": "^2.4.0",
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@tailwindcss/forms": "^0.5.2",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.35.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.2",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.7.2",
    "wrangler": "beta"
  },
  "engines": {
    "node": ">=14"
  },
  "volta": {
    "node": "16.7.0"
  },
  "lint-staged": {
    "app/**/{*.ts,*.tsx}": "npm run lint"
  }
}
